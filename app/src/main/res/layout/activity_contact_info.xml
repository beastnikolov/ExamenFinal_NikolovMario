<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".ContactInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_edit_taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:fontFamily="@font/abel"
            android:text="Todo Task Details"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_edit_taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/textView_edit_taskName"
            android:ems="10"
            android:fontFamily="@font/abel"
            android:inputType="textPersonName"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_edit_creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_edit_taskName"
            android:layout_margin="10dp"
            android:fontFamily="@font/abel"
            android:text="Created Date"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/editText_edit_creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_edit_taskName"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/textView_edit_creationDate"
            android:fontFamily="@font/abel"
            android:text="Date"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_edit_isComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/abel"
            android:text="is Complete?"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBox_edit_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/abel"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_completiondates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView_info_completionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/abel"
            android:text="Completion Date"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_editText_edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_edit_taskName"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/textView_edit_creationDate"
            android:fontFamily="@font/abel"
            android:text="Date"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>